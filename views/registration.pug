include includes/head
link(rel='stylesheet' href='/style/style_registration.css')

include includes/header

form(action='/check/registration' method='post')
    h1 Inscription
    #pseudo_keep
    label(for='pseudo')
    input#pseudo(type='text' placeholder='pseudo' name='pseudo' autocomplete='off' spellcheck='false')
    label(for='password')
    input#password(type='password' placeholder='Mot de passe' name='password')
    #password_not_same
    label(for='confirm_password')
    input#confirm_password(type='password' placeholder='Confirmer le mot de passe' name='confirm_password')
    input(type='submit' value='Valider' name='valid_registration')